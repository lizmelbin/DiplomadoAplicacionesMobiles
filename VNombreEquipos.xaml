<?xml version="1.0" encoding="utf-8" ?>
<Frame xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dominos.Views.VNombreEquipos">
    <Frame.Content>
        <StackLayout>
            <!-- Aqui esta el codigo de NOmrbes Equipos, hasta que pueda hcaer que funcione otra clase.-->
            <Label Text="Equipo 1"
                
                HorizontalOptions="CenterAndExpand" />
            <Entry Keyboard="Text" x:Name="Equipo1"
       Placeholder="Cómo se llama el equipo 1?"
        />
            <Label Text="Equipo 2"
                
                HorizontalOptions="CenterAndExpand" />
            <Entry Keyboard="Text" x:Name="Equipo2"
       Placeholder="Cómo se llama el equipo 2?"
       />

            <Label Text="Puntos para ganar"
                                HorizontalOptions="CenterAndExpand" />
            <Entry Keyboard="Numeric" Text="200" x:Name="hastaCuanto"
       Placeholder="Hasta cuando deseas jugar?"
                
       />




            <Button Text="Iniciar!"
        Font="Large"
        Image="begin.jpg"
        BackgroundColor="CadetBlue"
        HorizontalOptions="CenterAndExpand"
        VerticalOptions="EndAndExpand"
                    Clicked="Button_Clicked"
                
        />


        </StackLayout>
    </Frame.Content>
</Frame>